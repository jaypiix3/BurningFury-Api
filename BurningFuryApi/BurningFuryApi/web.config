<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet" 
                  arguments=".\BurningFuryApi.dll" 
                  stdoutLogEnabled="true" 
                  stdoutLogFile=".\logs\stdout" 
                  hostingModel="OutOfProcess"
                  requestTimeout="00:20:00"
                  startupTimeLimit="120"
                  shutdownTimeLimit="10"
                  processesPerApplication="1"
                  rapidFailsPerMinute="10">
        <environmentVariables>
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
          <environmentVariable name="ASPNETCORE_URLS" value="http://*:5000" />
          <environmentVariable name="DOTNET_USE_POLLING_FILE_WATCHER" value="true" />
          <environmentVariable name="ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS" value="true" />
        </environmentVariables>
      </aspNetCore>
      
      <!-- Enhanced error handling -->
      <httpErrors errorMode="Detailed" />
      
      <!-- Security headers -->
      <httpProtocol>
        <customHeaders>
          <add name="X-Content-Type-Options" value="nosniff" />
          <add name="X-Frame-Options" value="DENY" />
          <add name="X-XSS-Protection" value="1; mode=block" />
        </customHeaders>
      </httpProtocol>
      
      <!-- Compression -->
      <urlCompression doDynamicCompression="true" doStaticCompression="true" />
      
      <!-- Request filtering -->
      <security>
        <requestFiltering>
          <requestLimits maxAllowedContentLength="52428800" />
        </requestFiltering>
      </security>
    </system.webServer>
  </location>
  
  <!-- Logging configuration -->
  <system.diagnostics>
    <trace autoflush="true">
      <listeners>
        <add name="textWriterTraceListener" 
             type="System.Diagnostics.TextWriterTraceListener" 
             initializeData=".\logs\trace.log" />
      </listeners>
    </trace>
  </system.diagnostics>
</configuration>
